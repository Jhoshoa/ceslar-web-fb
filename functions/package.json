{
  "name": "ceslar-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Cristo Es La Respuesta",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rimraf lib",
    "seed": "node src/seeders/index.js",
    "seed:force": "node src/seeders/index.js --force",
    "seed:clear": "node src/seeders/index.js --clear",
    "seed:churches": "node src/seeders/index.js churches",
    "seed:users": "node src/seeders/index.js users",
    "seed:events": "node src/seeders/index.js events",
    "seed:sermons": "node src/seeders/index.js sermons",
    "seed:questions": "node src/seeders/index.js questions questionCategories"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "cloudinary": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "private": true
}
